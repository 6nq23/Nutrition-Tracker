<%- include('header') %>

<style>
  /* CSS for Water Intake Tracker */
  .container {
    max-width: 600px;
    margin: 0 auto;
    padding: 20px;
    font-family: Arial, sans-serif;
  }

  h2 {
    color: #333;
    text-align: center;
  }

  .form-container {
    background: #f9f9f9;
    padding: 20px;
    border-radius: 5px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
  }

  input[type="number"] {
    width: 100%;
    padding: 10px;
    margin-bottom: 10px;
    border: 1px solid #ddd;
    border-radius: 4px;
  }

  button {
    background-color: #007BFF;
    color: white;
    border: none;
    padding: 10px 20px;
    cursor: pointer;
    border-radius: 4px;
  }

  button:hover {
    background-color: #0056b3;
  }

  .result {
    margin-top: 20px;
    font-size: 16px;
  }

  .progress-bar-container {
    margin-top: 10px;
    background-color: #ddd;
    border-radius: 4px;
    overflow: hidden;
    height: 20px;
  }

  .progress-bar {
    background-color: #007BFF;
    height: 100%;
    width: 0;
    color: white;
    text-align: center;
    line-height: 20px;
    font-size: 12px;
    transition: width 0.3s ease-in-out;
  }
</style>

<div class="container">
  <div class="form-container">
    <h2>Water Intake Tracker</h2>

    <!-- Form to Add Water Intake -->
    <form id="water-intake-form">
      <label for="water-intake">Enter Water Consumed (ml):</label>
      <input 
        type="number" 
        id="water-intake" 
        placeholder="Enter amount (e.g., 250)" 
        required 
        min="0" 
        step="50" 
      />
      <button type="submit">Add Water Intake</button>
    </form>

    <!-- Water Intake Summary -->
    <div id="water-summary" class="result">
      <p>
        <strong>Total Water Consumed Today:</strong> 
        <span id="total-water">0</span> ml
      </p>
      <p>
        <strong>Daily Goal:</strong> 
        <span id="daily-goal">3000</span> ml
      </p>

      <!-- Progress Bar -->
      <div class="progress-bar-container">
        <div id="progress-bar" class="progress-bar">0%</div>
      </div>
    </div>
  </div>
</div>

<script>
  // JavaScript for Water Intake Tracker
  document.addEventListener('DOMContentLoaded', () => {
    const dailyGoal = 3000; // Set the daily water intake goal
    const progressBar = document.getElementById('progress-bar');
    const totalWaterElement = document.getElementById('total-water');

    // Fetch total water intake on page load
    async function fetchWaterIntake() {
      try {
        const response = await fetch('/api/water-intake');
        const data = await response.json();

        const totalWater = data.totalWater || 0;
        totalWaterElement.textContent = totalWater;

        // Update progress bar
        const progress = Math.min((totalWater / dailyGoal) * 100, 100);
        progressBar.style.width = `${progress}%`;
        progressBar.textContent = `${progress.toFixed(1)}%`;
      } catch (error) {
        console.error('Error fetching water intake:', error);
      }
    }

    // Handle form submission to add water intake
    document.getElementById('water-intake-form').addEventListener('submit', async (e) => {
      e.preventDefault();

      const waterIntake = document.getElementById('water-intake').value;

      if (!waterIntake) {
        alert('Please enter the water intake amount.');
        return;
      }

      try {
        const response = await fetch('/api/water-intake', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify({ waterConsumed: parseInt(waterIntake, 10) })
        });

        if (response.ok) {
          alert('Water intake entry added successfully!');
          document.getElementById('water-intake-form').reset();
          fetchWaterIntake(); // Refresh water intake summary
        } else {
          const error = await response.json();
          alert(`Failed to add water intake: ${error.error}`);
        }
      } catch (error) {
        console.error('Error adding water intake:', error);
      }
    });

    // Initial fetch
    fetchWaterIntake();
  });
</script>

