<%- include('header') %>

  <div class="tracker-container">
    <h1>Step Tracker</h1>
    <p>Keep track of your steps and stay active!</p>

    <!-- Progress Section -->
    <div class="progress-container">
      <div class="progress-bar" id="step-progress-bar"></div>
    </div>
    <p id="step-progress-text">0 / 10000 steps</p>

    <!-- Input Section -->
    <div class="input-container">
      <button id="add-steps-1000">+1000 Steps</button>
      <button id="add-steps-500">+500 Steps</button>
      <button id="reset-steps">Reset</button>
    </div>
  </div>
  <%- include('footer') %>

