<%- include('header') %>

<div class="container">
    <div class="form-container">
        <h2>Diet Plan Generator</h2>
        <form id="diet-plan-form">
            <label for="calorie-goal">Daily Calorie Goal (kcal):</label>
            <input type="number" id="calorie-goal" placeholder="Enter your calorie goal (e.g., 2000)" required>

            <label for="meal-preference">Meal Preference:</label>
            <select id="meal-preference" required>
                <option value="" disabled selected>Select a preference</option>
                <option value="vegetarian">Vegetarian</option>
                <option value="non-vegetarian">Non-Vegetarian</option>
                <option value="vegan">Vegan</option>
            </select>

            <button type="submit">Generate Plan</button>
        </form>

        <div id="diet-plan-result" class="result">
            <!-- Diet plan will be displayed here -->
        </div>
    </div>
</div>

<%- include('footer') %>
